{
  "manifest_version": 3,
  "name": "Better SaveFrom.net Stylesheets",
  "version": "1.0.0",
  "description": "Fixes YouTube stylesheets for the SaveFrom.net extension.",
  "homepage_url": "https://github.com/JustKesha/chrome-savefromnet-fix",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://youtube.com/*",
        "*://youtu.be/*"
      ],
      "css": ["./styles/button.css"],
      "run_at": "document_start"
    }
  ],
  "permissions": []
}